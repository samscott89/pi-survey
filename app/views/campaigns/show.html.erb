<%= provide(:title, full_title("View Campaign")) %>

<div class="row">
<div class="col-md-offset-1 col-md-10">

<div class="page-header">
<h1><%= @campaign.name %> <br><small>Campaign page </small></h1>
</div>

<%= link_to "Edit campaign", edit_campaign_path(@campaign), class: "btn btn-primary"%>
<%= link_to "Manage participants", campaign_participants_path(@campaign), class: "btn btn-primary" %>
<% if @campaign.live? %>
<%= link_to "Deactivate campaign", '#', class: "btn btn-danger disabled" %>
<% else %>
<%= link_to "Activate campaign", '#', class: "btn btn-success disabled" %>
<% end %>
<br>
<br>

<div class="list-group">
	<%= render partial: 'campaign_survey', collection: @campaign.campaign_surveys%>
</div>
</div>
</div>