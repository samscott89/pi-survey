<% cs = campaign_survey %>
<%= link_to survey_stats_path(cs.survey), class: "list-group-item" do %>
<div class="list-group-item-header">
<div class="row">
	<div class="col-md-6">
	<h3><b>
		<%= cs.survey.name %>
	</b></h3>
	</div>
	<div class="col-md-6">
		<h3>
			<small>
				Running: <%= "#{cs.start_date.strftime('%d/%m/%Y')} -- #{cs.end_date.nil? ? "Indefinite" : cs.end_date.strftime('%d/%m/%Y')}" %>
			</small>
		</h3>
	</div>
</div>
</div>
<h4 class="list-group-item-text">
Number of responses: <%= ActiveSurvey.where(survey_id: cs.survey.id, completed: true).count %>	
</h4>
<% end %>