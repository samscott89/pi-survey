<div class="form-body">

<%= form_for [@survey, Chart.new], role: "form" do |f| %>
	<fieldset>

	<%= f.label "Chart Type", class: "control-label" %>
	<%= f.select :type_id, options_for_select(ChartType.all.map{|c| [c.name.gsub("_"," ").capitalize, c.id]}), {}, {class: "form-control"} %>

	<%= f.label "Questions", class: "control-label" %>
	<% available_qs = @questions.all.map{|q| [q.name, q.id]} %>
	<%= f.select :question_id, options_for_select(available_qs), {}, {class: "form-control"} %>

	</fieldset>
	<br>
	<div class="form-submit">
	<%= f.button "Make Graph", class: "btn btn-primary btn-large" %>
	</div>

<% end #f %>