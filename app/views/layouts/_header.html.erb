<header class="navbar navbar-default navbar-fixed-top ">
  <div class="container">
   <%= link_to root_path do %>
      <div class="logo">
        PsychInsight
      </div>
    <% end %>
   <button class="navbar-toggle" data-toggle = "collapse" data-target = ".navHeaderCollapse"> 
      <span class ="icon-bar"></span>
      <span class ="icon-bar"></span>
      <span class ="icon-bar"></span>
   </button>

   <div class = "collapse navbar-collapse navHeaderCollapse">
    <nav>
      
      <ul class="nav navbar-nav nav-pills navbar-right">
        <% if user_signed_in? and current_user.is_creator? %>
          <li><%= link_to "My Surveys", user_surveys_path %></li>
          <li><%= link_to "My Campaigns", campaigns_path %></li>
        <% else %>
          <li><%= link_to "Browse Surveys", surveys_path %></li>
        <% end %>
        <% if user_signed_in? %>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", '#' %></li>
              <li><%= link_to "Settings", edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
        <% end %>
        <li><%= link_to "Help",  help_path %></li>
        <% if Rails.env.development? %>
        <li><%= link_to "Code (Dev only)", "/pi/gitlist/pi.git/master/" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
</header>